<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:clickable="true"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".AdditionalComponents.ProgressFragment.ProgressFragment">

    <ProgressBar
        android:id="@+id/progressFragProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top" />

    <ImageView
        android:id="@+id/imageStatusProgFrag"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_alert"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textStatusProgFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="-5sp"
        android:maxWidth="250dp"
        android:text="Нет подключения к интернету"
        android:textAlignment="center"
        android:textSize="22sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonReloadProgFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="50dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:maxWidth="200dp"
        android:text="Обновить"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:visibility="invisible" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/messege_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/white_round"
        android:backgroundTint="@color/purple_200"
        android:gravity="left|center_vertical"
        android:padding="5sp"
        android:paddingStart="14sp"
        android:paddingEnd="14sp"
        android:text="Чужое сообщениеdddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_max="wrap" />


    <TextView
        android:id="@+id/time_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="8:35"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/messege_field"
        app:layout_constraintStart_toEndOf="@+id/messege_field" />
</androidx.constraintlayout.widget.ConstraintLayout>